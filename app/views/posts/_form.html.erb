<%= form_for(@post, :html => { :multipart => true } ) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <% if @post.image %>
      <%= image_tag @post.image.url(:medium) %>
    <% end %>
    <%= f.file_field :image %>
  </div>
  
  <div class="actions">
    <%= f.label :submit%>
    <%= f.submit :class => 'button save' %>
  </div>
<% end %>